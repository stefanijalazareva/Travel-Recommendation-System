@model IEnumerable<TravelRecommendationSystem.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2><i class="fas fa-calendar-check text-primary me-2"></i>My Bookings</h2>
            <a asp-controller="Destinations" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Book New Destination
            </a>
        </div>
        <p class="text-muted">Manage your travel bookings and view booking details</p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var booking in Model)
        {
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card h-100 shadow-sm booking-card">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                @(booking.Destination?.Name ?? "Unknown Destination")
                            </h6>
                            <span class="badge bg-light text-dark">@booking.Status</span>
                        </div>
                    </div>

                    @if (booking.Destination?.Images?.Any() == true)
                    {
                        <img src="@booking.Destination.Images.FirstOrDefault(i => i.IsPrimary)?.ImageUrl" 
                             class="card-img-top" 
                             alt="@booking.Destination.Name" 
                             style="height: 200px; object-fit: cover;" />
                    }

                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Check-in</small>
                                <div class="fw-bold">@booking.CheckInDate.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Check-out</small>
                                <div class="fw-bold">@booking.CheckOutDate.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Guests</small>
                                <div class="fw-bold">
                                    <i class="fas fa-user me-1"></i>@booking.Adults
                                    @if (booking.Children > 0)
                                    {
                                        <i class="fas fa-child ms-2 me-1"></i>@booking.Children
                                    }
                                </div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Total Amount</small>
                                <div class="fw-bold text-success">
                                    @booking.TotalAmount.ToString("C") 
                                    <small>@booking.Currency</small>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(booking.AccommodationType))
                        {
                            <div class="mb-2">
                                <small class="text-muted">Accommodation</small>
                                <div>@booking.AccommodationType</div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(booking.BookingReference))
                        {
                            <div class="mb-2">
                                <small class="text-muted">Booking Reference</small>
                                <div class="font-monospace">@booking.BookingReference</div>
                            </div>
                        }

                        <div class="features mb-3">
                            @if (booking.FlightIncluded)
                            {
                                <span class="badge bg-info me-1"><i class="fas fa-plane me-1"></i>Flight</span>
                            }
                            @if (booking.TransferIncluded)
                            {
                                <span class="badge bg-info me-1"><i class="fas fa-car me-1"></i>Transfer</span>
                            }
                        </div>
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-outline-primary flex-fill">
                                <i class="fas fa-eye me-1"></i> View Details
                            </a>
                            @if (booking.Status == TravelRecommendationSystem.Models.BookingStatus.Confirmed)
                            {
                                <button class="btn btn-outline-danger" onclick="cancelBooking(@booking.Id)">
                                    <i class="fas fa-times me-1"></i> Cancel
                                </button>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(booking.ProviderBookingUrl))
                        {
                            <a href="@booking.ProviderBookingUrl" target="_blank" class="btn btn-link btn-sm w-100 mt-2">
                                <i class="fas fa-external-link-alt me-1"></i> View on @(booking.ProviderName ?? "Provider")
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Need Help?</strong> If you have any questions about your bookings, please contact our support team.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
                <h4>No Bookings Yet</h4>
                <p class="text-muted mb-4">You haven't made any bookings yet. Start exploring amazing destinations!</p>
                <a asp-controller="Destinations" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-search me-2"></i> Explore Destinations
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function cancelBooking(bookingId) {
            if (confirm('Are you sure you want to cancel this booking?')) {
                $.post('@Url.Action("Cancel")', { id: bookingId })
                    .done(function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Error canceling booking: ' + data.message);
                        }
                    })
                    .fail(function() {
                        alert('Error canceling booking. Please try again.');
                    });
            }
        }

        $(document).ready(function() {
            // Add animation to cards
            $('.booking-card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}

<style>
    .booking-card {
        transition: all 0.3s ease;
        border: none;
    }

    .booking-card:hover {
        transform: translateY(-2px);
    }

    .card-header {
        border-bottom: none;
    }

    .features .badge {
        font-size: 0.75rem;
    }
</style>
